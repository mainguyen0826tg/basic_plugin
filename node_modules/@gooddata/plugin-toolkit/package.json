{
  "name": "@gooddata/plugin-toolkit",
  "version": "8.7.0",
  "author": "GoodData",
  "description": "GoodData Set of Tools for working with Plugins",
  "repository": {
    "type": "git",
    "url": "https://github.com/gooddata/gooddata-ui-sdk.git",
    "directory": "tools/plugin-toolkit"
  },
  "license": "MIT",
  "main": "dist/index.js",
  "module": "esm/index.js",
  "browser": "dist/index.js",
  "typings": "esm/index.d.ts",
  "bin": {
    "gdc-plugins": "dist/index.js"
  },
  "sideEffects": false,
  "files": [
    "dist/**/*.js",
    "dist/**/*.json",
    "dist/**/*.d.ts",
    "dist/**/*.map",
    "dist/**/*.tgz"
  ],
  "config": {
    "eslint": "-c .eslintrc.js --ext ts src/"
  },
  "dependencies": {
    "@babel/cli": "^7.7.2",
    "@babel/core": "^7.7.2",
    "@babel/preset-env": "^7.7.2",
    "@babel/preset-typescript": "^7.7.2",
    "@gooddata/sdk-model": "^8.7.0",
    "@gooddata/sdk-backend-spi": "^8.7.0",
    "@gooddata/sdk-backend-bear": "^8.7.0",
    "@gooddata/sdk-backend-tiger": "^8.7.0",
    "axios": "^0.21.4",
    "chalk": "^4.1.1",
    "columnify": "^1.5.4",
    "commander": "^8.1.0",
    "cross-spawn": "^7.0.3",
    "dotenv": "^8.2.0",
    "fast-glob": "^3.2.7",
    "fs-extra": "^10.0.0",
    "inquirer": "^7.3.3",
    "lodash": "^4.17.19",
    "ora": "^5.3.0",
    "strip-ansi": "^6.0.0",
    "tar": "^6.1.11",
    "tslib": "^2.0.0"
  },
  "devDependencies": {
    "@gooddata/eslint-config": "^2.1.0",
    "@types/cross-spawn": "^6.0.2",
    "@types/columnify": "^1.5.1",
    "@types/fs-extra": "^9.0.13",
    "@types/inquirer": "^7.3.1",
    "@types/jest": "^26.0.12",
    "@types/lodash": "^4.14.158",
    "@types/node": "^12.12.26",
    "@types/tar": "^6.1.0",
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "@typescript-eslint/parser": "^4.14.2",
    "concurrently": "^6.0.2",
    "dependency-cruiser": "^9.9.5",
    "eslint": "^7.5.0",
    "eslint-plugin-header": "^3.0.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-no-only-tests": "^2.4.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-sonarjs": "^0.9.1",
    "jest": "^26.4.2",
    "jest-junit": "^3.0.0",
    "prettier": "~2.3.0",
    "ts-jest": "^26.3.0",
    "ts-node": "^8.4.1",
    "typescript": "4.0.2"
  },
  "scripts": {
    "clean": "rm -rf ci dist esm coverage *.log && jest --clearCache",
    "dev": "tsc -p tsconfig.dev.json --watch",
    "build": "bash scripts/build.sh",
    "build-cjs": "tsc -p tsconfig.build.json",
    "test": "jest --watch --passWithNoTests",
    "test-once": "jest --passWithNoTests",
    "test-ci": "JEST_JUNIT_OUTPUT=./ci/results/test-results.xml jest --ci --passWithNoTests --config jest.ci.js",
    "eslint": "eslint $npm_package_config_eslint",
    "eslint-ci": "mkdir -p ./ci/results && eslint -f checkstyle -o ci/results/eslint-results.xml $npm_package_config_eslint",
    "prettier-check": "prettier --check '{src,test}/**/*.{ts,tsx,json,scss,md,yaml,html}'",
    "prettier-write": "prettier --write '{src,test}/**/*.{ts,tsx,json,scss,md,yaml,html}'",
    "dep-cruiser": "depcruise --validate .dependency-cruiser.js --output-type err-long src/",
    "dep-cruiser-ci": "depcruise --validate .dependency-cruiser.js --output-type err-long src/",
    "validate": "npm run dep-cruiser && npm run eslint && npm run prettier-check",
    "validate-ci": "npm run dep-cruiser-ci && npm run eslint-ci && npm run prettier-check"
  }
}